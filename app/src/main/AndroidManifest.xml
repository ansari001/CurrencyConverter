<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.test.itfaq">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".di.BaseApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.FibonacciActivity"></activity>
        <activity android:name=".ui.AnagramActivity" />
        <activity
            android:name=".ui.MainMenuActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.ConverterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.CurrencyListActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>